<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_ERR">
            <!-- See https://logging.apache.org/log4j/2.x/manual/layouts.html#PatternLayout -->
            <PatternLayout pattern="%highlight{%msg%n}" />
        </Console>
        <RollingFile name="file" fileName="logs/app.log4j" filePattern="logs/app.%d{yyyy-MM-dd}-%i.log4j.gz">
            <PatternLayout pattern="%d{ISO8601_OFFSET_DATE_TIME_HHMM} %pid %5p %c{1.1} %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- To log sql statements and parameter values uncomment the following lines -->
        <!-- <Logger name="org.hibernate.SQL" level="debug"></Logger> -->
        <!-- <Logger name="org.hibernate.type.descriptor.sql" level="trace"></Logger> -->

        <!--  To log debug messages from only our tool, uncomennt the following line. -->
        <!-- <Logger name="com.vng" level="trace"></Logger> -->

        <Root level="info">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="file" />
        </Root>
    </Loggers>
</Configuration>
